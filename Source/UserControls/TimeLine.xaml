<UserControl x:Class="Morphing.UserControls.TimeLine"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="500" Height="70">    
    <Grid>
        <ScrollViewer Name="scrollViewer" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Visible">
            <Canvas Name="canvas" Height="50">
                <Image Name="timeLineGraph" Stretch="Fill" />
                <Rectangle Name="hoverFrame" Canvas.Left="0" Canvas.Top="0" Height="30" Stroke="Black" Width="10" Visibility="Hidden"/>
                <Rectangle Name="selectionFrame" Fill="Transparent" Width="8" Height="28" Stretch="Fill" StrokeThickness="1" Stroke="Black" Margin="1" />
            </Canvas>
        </ScrollViewer>
    </Grid>
</UserControl>
