<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Morphing.Dialogs.InsertImage"
    Height="135" Width="271" WindowStartupLocation="CenterScreen" Style="{StaticResource Dialog}" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" FocusManager.FocusedElement="{Binding ElementName=txtWidth}">
    <Border Style="{StaticResource DialogBorder}">
    	<Grid Width="Auto" Height="Auto">
			
            <Button x:Name="btnOk" Width="80" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="23" Margin="0,0,100,10" IsDefault="True" Content="{DynamicResource StrOk}"  Click="btnOk_Click"/>
            <Button x:Name="btnCancel" Width="80" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="23" Margin="0,0,10,10"  IsCancel="True" Content="{DynamicResource StrCancel}"/>
            <RadioButton Margin="8,32,10,0" VerticalAlignment="Top" Content="{DynamicResource StrAdaptImage}" IsChecked="True" x:Name="rdbAdaptImage"/>
            <RadioButton Margin="8,64,10,0" Content="{DynamicResource StrAdaptScene}" x:Name="rdbAdaptScene" VerticalAlignment="Top"/>
        </Grid>
    </Border>
</Window>
