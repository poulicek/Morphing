<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Morphing.Dialogs.CanMerge"
    Height="78" Width="398" WindowStartupLocation="CenterScreen" Style="{StaticResource Dialog}">
    <Border Style="{StaticResource DialogBorder}">
    	<Grid>        
    		<Grid.ColumnDefinitions>
    			<ColumnDefinition MinWidth="325" Width="Auto"/>
    		</Grid.ColumnDefinitions>        
    		<Button x:Name="btnYes" Margin="127.896,0,0,10.52" IsDefault="True" Content="{DynamicResource StrYes}" Click="btnYes_Click" Width="70" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="23"/>        
    		<Button x:Name="btnNo" Margin="0,0,53.104,10.52" IsCancel="True" Content="{DynamicResource StrNo}" Click="btnNo_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="70" Height="23"/>
    		<TextBlock Foreground="White" Margin="0,14,-71,0" VerticalAlignment="Top" Height="23" Text="{DynamicResource StrCanMerge}" TextAlignment="Center" TextWrapping="Wrap"/>
    	</Grid>
    </Border>
</Window>
